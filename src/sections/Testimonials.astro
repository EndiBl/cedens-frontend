---

<section class="testimonials-section">
  <div class="testimonials-section__container">
    <h2 class="testimonials-section__title">Lo que <span class="testimonials-section__title testimonials-section__title--accent">nuestros pacientes</span> dicen</h2>

    <div class="swiper">
      <div class="swiper-wrapper">
        {
        testimonials.map((testimonial) => (
          <div class="swiper-slide">
            <TestimonialCard testimonial={testimonial} />
          </div>
        ))
        }
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
      <div class="swiper-scrollbar"></div>
    </div>
  </div>
</section>


<script>
  import Swiper from 'swiper';
  import { Navigation, Pagination, Scrollbar } from 'swiper/modules';
  import 'swiper/css';
  import 'swiper/css/navigation';
  import 'swiper/css/pagination';
  import 'swiper/css/scrollbar';

  function initSwiper() {
    const swiper = new Swiper('.swiper', {
      modules: [Navigation, Pagination, Scrollbar],
      loop: true,
      centerInsufficientSlides: true,
      slidesPerView: 1,
      spaceBetween: 50,
      breakpoints: {
        720: {
          slidesPerView: 2,
          spaceBetween: 50
        },
        1280: {
          slidesPerView: 3,
          spaceBetween: 50
        }
      },
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
    });

    console.log('Swiper initialized');
  }

  // Asegúrate de que el DOM esté completamente cargado antes de inicializar Swiper
  document.addEventListener('DOMContentLoaded', initSwiper);
</script>

<style>
  .testimonials-section {
    background-color: var(--color-primary);
    padding: 32px 0;
    position: relative;
  }

  .testimonials-section__container {
    max-width: 1440px;
    margin: 0 auto;
  }

  .testimonials-section__title {
    font-size: var(--text-3xl-font-size);
    line-height: var(--text-3xl-line-height);
    margin-bottom: 32px;
    font-weight: 600;
    text-align: center;
    color: var(--color-tertiary);
  }

  .testimonials-section__title--accent {
    color: var(--color-accent);
  }

  .swiper {
    padding: 0 48px;
  }

  .swiper-button-prev,
  .swiper-button-next {
    color: var(--color-tertiary);
  }

  .swiper-button-prev::after,
  .swiper-button-next::after {
    font-size: 32px;
  }

  @media (min-width: 960px) {
    .testimonials-section {
      padding: 64px;
    }

    .testimonials-section__title {
      font-size: var(--text-5xl-font-size);
      line-height: var(--text-5xl-line-height);
    }
  }
</style>